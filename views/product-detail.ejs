<section id="productDetail">
  <div class="d-flex flex-column justify-content-between" style="height: 100%">
    <div class="container">
      <div class="row pt-4">
        <div class="col-2">
          <div
            class="rounded bg-white d-flex flex-row justify-content-center align-items-center"
            style="width: 40px; height: 40px"
          >
            <a href="/">
              <img src="./icons/icon-back.png" alt="back icon" />
            </a>
          </div>
        </div>
        <div
          class="col-8 d-flex flex-row justify-content-center align-items-center"
        >
          <span class="fw-bold">Detail</span>
        </div>
        <div
          class="col-2 d-flex flex-row justify-content-end align-items-center text-end"
        >
          <div
            class="rounded bg-white d-flex flex-row justify-content-center align-items-center text-end"
            style="width: 40px; height: 40px"
          >
            <img src="./icons/icon-dots.png" alt="dots icon" />
          </div>
        </div>
      </div>
    </div>
    <div class="container d-flex flex-column flex-md-row mt-5">
      <div class="row">
        <div
          class="col-12 col-md-4 text-center d-flex flex-row justify-content-center align-items-center"
        >
          <img src="./img/modelo-especial.png" alt="beer photo" />
        </div>
        <div class="col-12 col-md-8 mt-2">
          <div
            class="bg-white pt-5 pb-5 ps-4 pe-4"
            style="border-radius: 48px 48px 0px 0px"
          >
            <div class="row">
              <div class="col-8">
                <h3 class="fw-bold" style="font-size: 24px" id="name"></h3>
              </div>
              <div class="col-4 text-end">
                <span style="font-size: 24px" id="price"></span>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <span style="font-size: 14px; color: #969696"
                  >Origin: <span id="origin"></span
                ></span>
                <span style="font-size: 14px; color: #969696"
                  >Stock: <span id="stock"></span
                ></span>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-12">
                <h6 class="fw-bold">Description</h6>
                <p style="font-size: 14px; color: #969696" id="description">
                  <!-- <span class="fw-bold" style="color: #ff9f24">Read more</span> -->
                </p>
              </div>
            </div>
            <div class="row mt-2">
              <div class="col-12">
                <h6 class="fw-bold">Size</h6>
              </div>
            </div>
            <div class="row pt-2" id="skusContainer">
              <div class="col-4">
                <div class="border rounded-pill text-center">
                  <span style="color: #969696; font-size: 14px">12 - 24oz</span>
                </div>
              </div>
              <div class="col-4">
                <div class="border rounded-pill text-center">
                  <span style="color: #969696; font-size: 14px">18 - 12oz</span>
                </div>
              </div>
              <div class="col-4">
                <div class="border rounded-pill text-center">
                  <span style="color: #969696; font-size: 14px"
                    >Half Barrel</span
                  >
                </div>
              </div>
            </div>
            <div class="row mt-5">
              <div class="col-3">
                <div
                  class="border rounded bg-white d-flex flex-row justify-content-center align-items-center"
                  style="width: 54px; height: 54px"
                >
                  <img src="./icons/icon-bag.png" alt="bag icon" />
                </div>
              </div>
              <div class="col-9">
                <button
                  class="rounded border-0 w-100 text-white"
                  style="height: 54px; background: #ff9f24"
                  type="button"
                >
                  Add to cart
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="js/product-detail.page.js" type="module"></script>
